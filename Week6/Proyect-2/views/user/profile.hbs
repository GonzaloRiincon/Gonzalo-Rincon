<div class="container">

    <div class="row justify-content-center">


        <div class="col-4 card students-card">
            <div class="card-body">
                <h5 class="username text-center"><b>Username:</b> {{user.username}}</h5>
                <img class="image text-center img-fluid mx-auto d-block" src="{{user.avatar}}"
                    alt="{{user.username}}"></img>
                <p class="email text-center"><b>email: </b>{{user.email}}</p>
                <div class="col-12 text-center p-5">
                    <a class="btn btn-light border-dark" href="/students/{{user.id}}">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>